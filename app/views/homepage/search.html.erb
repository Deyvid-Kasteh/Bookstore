<div class="searchPage">
    <div class="searchPageNavBar">
    <p><%= link_to "Biblioteca.", root_path %></p>
    <nav>
    <ul>
    <li><%= link_to "Books", books_path %></li>
    <li><%= link_to "AUTHORs page", authors_path %></li>
    </ul>
    </nav>
    </div>

    <div class="searchPageBody">
        <% @livroAzkaban['items'].each do |volume| %>
            <% if volume['volumeInfo'].include?('imageLinks') %>
                <%@titulo = volume['volumeInfo']['title']%>
                
                <div>
                    <%= image_tag volume['volumeInfo']['imageLinks']['thumbnail'], class: "searchPageBodyImage" %>
                    <div class="volumeDetalhes">
                        <p><%= @titulo%></p>
                    </div>
                </div>
            <% end %> 
        <% end %>
    </div>
    <div class="searchPageFoot">
            <p>  <%= link_to "Books", books_path %></p>
            <p><%= link_to "AUTHORs page", authors_path %></p>
            <p><%= link_to "Home page", root_path %></p>
    </div>
</div>