<div id="<%= dom_id author %>">
  <p>
    <strong>Name:</strong>
    <%= author.name %>
  </p>

  <p>
    <strong>Gender:</strong>
    <%= author.gender %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= author.age %>
  </p>

  <p>
    <strong>Books:</strong>
    <ul>
      <% author.books.each do |book| %>
        <li><%= book.title%></li>
      <% end %>
    </ul>
  </p>

</div>
